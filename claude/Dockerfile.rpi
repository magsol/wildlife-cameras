# Dockerfile for Raspberry Pi 4B environment testing
# Uses official Raspberry Pi OS Bullseye ARM64 base image

FROM arm64v8/debian:bullseye

# Install system dependencies matching Raspberry Pi setup
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-opencv \
    python3-numpy \
    libopencv-dev \
    libatlas-base-dev \
    libjpeg-dev \
    libtiff5-dev \
    libpng-dev \
    libv4l-dev \
    libavcodec-dev \
    libavformat-dev \
    libswscale-dev \
    libxvidcore-dev \
    libx264-dev \
    libgtk-3-dev \
    sqlite3 \
    git \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy application code
COPY . .

# Install Python dependencies
RUN pip3 install --no-cache-dir \
    fastapi \
    uvicorn \
    pydantic==2.11.9 \
    requests \
    pyyaml \
    pytest \
    pytest-asyncio \
    pytest-mock

# Create storage directories
RUN mkdir -p /tmp/motion_events

# Expose port
EXPOSE 8000

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV IS_DOCKER=1

# Default command
CMD ["python3", "-m", "pytest", "tests/", "-v"]
